<div class="task-container p-1">
    <div class="title-task">
        <h1>Todo List</h1>
    </div>
    <div class="add-container">
        <form action="get" class="task-item">
            <button class="task-btn">
                <span class="material-symbols-rounded">add</span>
            </button>
            <input class="title-task" type="text" placeholder="Adicionar Tarefa">
            {{!-- <textarea name="desc-task" id="desc-task" cols="30" rows="1"></textarea> --}}
        </form>
    </div>
    <ul class="task-list" id="task-pendentes">
        <h5>Pendentes</h5>
        {{#each data}}
        <li class="task-item">
            <a href="">
                <button class="task-btn"></button>
            </a>
            <span class="title-task">{{titulo}}</span>
        </li>
        {{/each}}
    </ul>
    <ul class="task-list" id="task-concluidos">
        <h5>Conclu√≠dos</h5>
        <li class="task-item">
            <a href="">
                <button class="task-btn">
                    <span class="material-symbols-rounded">done</span>
                </button>
            </a>
            <span class="title-task">Task 1</span>
        </li>
    </ul>
</div>